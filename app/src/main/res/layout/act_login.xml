<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTop"
            android:layout_width="310dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY" />



        <LinearLayout
            android:id="@+id/llCourt"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ivCourt"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="10dp"
                android:src="@drawable/fy" />

            <TextView
                android:id="@+id/tvCourt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择法院"
                android:paddingLeft="16dp"
                android:textColor="@color/md_black"
                android:textColorHint="@color/md_black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoginName"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ivLoginName"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="10dp"
                android:src="@drawable/yhm" />

            <EditText
                android:id="@+id/etLoginName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="用户名"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textColor="@color/md_black"
                android:textColorHint="@color/md_black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPwd"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ivPwd"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="10dp"
                android:src="@drawable/mm" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textColor="@color/md_black"
                android:textColorHint="@color/md_black"
                android:textSize="22dp" />

        </LinearLayout>

        <com.unicorn.sxshenwutong.b.login.ui.LoginButton
            android:id="@+id/btnLogin"
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp" />

        <View android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:title="陕西法院移动办案"
            android:textColor="@color/md_white"
            android:layout_marginBottom="50dp"
            android:textSize="22dp"/>

    </LinearLayout>

</FrameLayout>
