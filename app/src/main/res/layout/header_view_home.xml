<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:indicator_drawable_selected="@drawable/new_bg2"
        app:indicator_drawable_unselected="@drawable/new_bg1"
        app:indicator_height="12dp"
        app:indicator_width="12dp"
        app:layout_heightPercent="70%sw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_heightPercent="8%sh">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/tx" />

        <TextView
            android:id="@+id/tvMarquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textIsSelectable="true"
            android:textColor="@color/md_black"
            android:textSize="16dp" />

    </LinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>





